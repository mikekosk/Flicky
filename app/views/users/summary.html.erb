
<div class="container flash-show-page">
  <div class="container">
    <h4> <%= "Your Group Consensus" %> </h4>
    <p>
      Each film is rated and scored based on the following metric: <br> <br>
      Super-Like: 1.5 points <br>
      Would-Watch: 1 point <br>
      Seen-it: 0 points <br>
      No-Way: -1 point 
    </p>

  </div>
</div>
<div>
</div>

<table class="table table-dark dark-bg">
  <thead>
    <tr>
      <th><%= "Movie" %></th>
      <th><%= "Score" %></th>
      <th><%= "IMDB Rating" %></th>
    </tr>
  </thead>
  <tbody>
    <% @ratings.each do |rating| %>
      <tr>
        <td><%= @movies[rating[0].to_i].title %></td>
        <td><%= rating[1] %></td>
        <td><%= @movies[rating[0].to_i].vote_average %></td>
      </tr>
    <% end %>
  </tbody>
</table>
